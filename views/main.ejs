	<body>
		<div class="page_container">
		
		
			<script type="text/javascript">
				// Polyfill
				if (!Object.keys) {
				    Object.keys = function (obj) {
				        var arr = [],
				            key;
				        for (key in obj) {
				            if (obj.hasOwnProperty(key)) {
				                arr.push(key);
				            }
				        }
				        return arr;
				    };
				}
				
				
				
				function generateItemBlock(item) {
					if (item.perishable) {
						var perishable = 'Yes';
					} else {
						var perishable = 'No';
					}
					
					// Item template
					var itemTemplate = 	'<li class="item">'
						+ '<div class="form-group row">'
							+ '<div class="col-sm-6">'
								+ '<label for="food_name">Type of Food:</label>'
								+ '<p>' + item.food_name + '</p>'
							+ '</div>'
							+ '<div class="col-sm-6">'
								+ '<label for="quantity">Quantity Available:</label>'
								+ '<p>' + item.quantity + '</p>'
							+ '</div>'
						+ '</div>'
		
						+ '<div class="form-group row">'
							+ '<div class="col-sm-6">'
								+ '<label for="expire_date">Throw Away Date:</label><br/>'
								+ '<p>' + item.expiry_date + '</p>' +
							+ '</div>'
							+ '<div class="col-sm-6">'
								+ '<label for="perishable">Is this food perishable?</label>'
								+ '<p>' + perishable + '</p>' +
							+ '</div>'
						+ '</div>'
		            
						+ '<div class="form-group row">'
							+ '<div class="col-sm-12">'
								+ '<label for="comments">Comments:</label>'
								+ '<p>' + item.comments + '</p>' +
							+ '</div>'
						+ '</div>'
					+ '</li>';
					
					return itemTemplate;
				}
				
				
				
				
				
				
				
				
				
				
				$(document).ready(function() {
					
					$.ajax({
						url: '/listOfferings',
						dataType: 'json',
						success: function(data, status, jqXHR) {
							var objectProperties = [];
					
							for (var property in data) {
								objectProperties.push(property);
							}
						
							var items = [];	
							
							for (var prop in data) {
								numOfItems = data[prop].length;
								break;
							}
							
							// Loops through submitted items
							for (i = 0; i < numOfItems; ++i) {
								
								var item = {};
								
								// Loops through properties
								for (pI = 0; pI < Object.keys(data).length; ++pI) {
									item[objectProperties[pI]] = data[objectProperties[pI]][i];
								}
								
								$('#item_list').append(generateItemBlock(item));
								
								items.push(item);
							}
							
							console.log(items);
						}
					});
				});
				
				
				
				
				
				
				
				
				
				
			</script>
		
		
		
		
