		<script>
		$(document).ready(function() {
			$('.datepicker').datepicker({clickInput:true});
		});
		
		function generateFoodItem(index) {
			var html = '<div class="form-group row">'
						+ '<div class="col-sm-6">'
							+ '<label for="food_name">Type of Food:</label>'
							+ '<input type="text" id="food_name" name="food_name['+index+']" class="form-control">'
						+ '</div>'
						+ '<div class="col-sm-6">' + '<label for="quantity">Quantity:</label>'
							+ '<input type="text" id="quantity" name="quantity['+index+']" class="form-control">'
						+ '</div>'
					+ '</div>'
					+ '<div class="form-group row">'
						+ '<div class="col-sm-6">'
							+ '<label for="expire_date">Throw Away Date:</label><br/>'
							+ '<input class="datepicker" data-provide="datepicker" id="expire_date" name="expire_date['+index+']">'
						+ '</div>'
						+ '<div class="col-sm-6">'
							+ '<label for="perishable">Is this food perishable?</label>'
							+ '<input type="checkbox" id="perishable" name="perishable['+index+']" class="form-control">'
						+ '</div>'
					+ '</div>'
					+ '<div class="form-group row">'
						+ '<div class="col-sm-12">'
							+ '<label for="comments">Comments:</label>'
							+ '<textarea type="text" id="comments" name="comments['+index+']" class="form-control"></textarea>'
						+ '</div>'
					+ '</div>';
			return html;
		}
		var counter = 1; // There's already an item 0.
		function addFoodItem() {
			var newFoodItem = document.createElement("li");
			newFoodItem.id = counter;
			newFoodItem.innerHTML = generateFoodItem(counter);
			$('#food_list').append(newFoodItem);
			counter += 1;
			$('.datepicker').datepicker({clickInput:true});
		}
		</script>

