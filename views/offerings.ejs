	<body>
		<div class="page_container">

			<div class="page-content">

				<h1>Offer Food</h1>

				<form id="form-registration" method="post" action="/addOffering">
					<ul id="food_list">
						<li id="0">
							<div class="form-group row">
								<div class="col-sm-6">
									<label for="food_name">Type of Food:</label>
